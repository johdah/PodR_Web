{# src/Dahlberg/PodrBundle/Resources/views/Playlist/index.html.twig #}
{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} | Playlists{% endblock %}

{% block body %}
    <div class="row">
        <nav class="breadcrumbs">
            <a href="{{ path('root') }}">Home</a>
            <a class="current">Playlists</a>
        </nav>
    </div>
    <div class="row playlist-index">
        {% if playlists %}
            <dl class="tabs vertical playlist-list one-liner">
                {% for playlist in playlists %}
                    <dd><a href="{{ path('playlist_details', {'id': playlist.getId}) }}">{{ playlist.getTitle }}</a></dd>
                {% endfor %}
            </dl>
        {% else %}
            <p>No playlists found.</p>
        {% endif %}

        <h3>Add playlist</h3>
        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_errors(form) }}
            {% if formSuccess %}
                <div data-alert class="alert-box success radius">
                    {{ formSuccess }}
                </div>
            {% endif %}
            <div>
                {{ form_widget(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}