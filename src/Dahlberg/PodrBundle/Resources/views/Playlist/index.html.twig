{# src/Dahlberg/PodrBundle/Resources/views/Playlist/index.html.twig #}
{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} | Playlists{% endblock %}

{% block body %}
    <div class="row">
        <nav class="breadcrumbs">
            <a href="{{ path('root') }}">Home</a>
            <a class="current">Playlists</a>
        </nav>
    </div>
    <div class="row playlist-index">
        {% if playlists %}
            <dl class="tabs vertical playlist-list one-liner">
                {% for playlist in playlists %}
                    <dd><a href="{{ path('playlist_details', {'id': playlist.getId}) }}">{{ playlist.getTitle }}</a></dd>
                {% endfor %}
            </dl>
        {% else %}
            <p>No playlists found.</p>
        {% endif %}
    </div>
{% endblock %}